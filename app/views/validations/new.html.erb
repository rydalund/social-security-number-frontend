<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <div class="px-6 py-8">
      <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">
        Social Security Number Validator
      </h1>
      
      <%= form_with(url: validations_path, method: :post, class: "space-y-6") do |f| %>
        <div>
          <label for="social_security_number" class="block text-sm font-medium text-gray-700 mb-2">
            Enter 12-digit Social Security Number
          </label>
          <div class="mt-1">
            <%= f.text_field :social_security_number, 
                  value: @social_security_number,
                  class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  placeholder: "YYYYMMDDXXXX",
                  pattern: "\\d{12}",
                  title: "Please enter exactly 12 digits",
                  required: true %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Format: YYYYMMDDXXXX (12 digits)
          </p>
        </div>
        
        <div>
          <%= f.submit "Validate", 
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
        </div>
      <% end %>
      
      <% if @result %>
        <div class="mt-8 pt-8 border-t border-gray-200">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Validation Result</h2>
          
          <% if @result['valid'] %>
            <div class="rounded-md bg-green-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-green-800">
                    ✓ Valid Social Security Number
                  </h3>
                  <div class="mt-2 text-sm text-green-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <li><strong>Formatted:</strong> <%= @result['formatted'] %></li>
                      <li>
                        <strong>Type:</strong> 
                        <%= @result['is_coordination_number'] ? 'Coordination Number' : 'Regular Number' %>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    ✗ Invalid Social Security Number
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <%= @result['error'] %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <p class="text-xs text-gray-500 text-center">
        This service validates Swedish Social Security Numbers (personnummer) using a Rust backend API.
      </p>
    </div>
  </div>
</div>
