<div class="max-w-md mx-auto mt-10">
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">
    Social Security Number Validator
  </h1>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <%= form_with(url: validations_path, method: :post, class: "space-y-4") do |f| %>
      <div>
        <%= f.label :social_security_number, 
              "Enter 12-digit Social Security Number:", 
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        
        <%= f.text_field :social_security_number,
              value: @social_security_number,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: "YYYYMMDDXXXX",
              pattern: "\\d{12}",
              title: "Please enter exactly 12 digits",
              required: true %>
        
        <p class="mt-1 text-xs text-gray-500">
          Format: YYYYMMDDXXXX (12 digits)
        </p>
      </div>
      
      <div class="pt-2">
        <%= f.submit "Validate", 
              class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
